{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,

    /* Bundler mode */
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "noEmit": true,

    /* JSX */
    "jsx": "react-jsx"
  },
  "include": ["ui.tsx"]
}
